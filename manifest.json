{
  "manifest_version": 3,
  "name": "Local Pomodoro Focus Timer",
  "version": "1.1",
  "description": "A local Pomodoro timer with site blocking during work sessions.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "scripting"          // ⬅ NEW
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pomodoro Focus Timer"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sounds/finished.mp3"],   // ⬅ NEW – see note below
      "matches": ["<all_urls>"]
    }
  ]
}
